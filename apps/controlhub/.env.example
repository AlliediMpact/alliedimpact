# ControlHub - Platform Observability Dashboard
# This is ControlHub's OWN Firebase project (separate from apps)

# Firebase Configuration (Client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your_controlhub_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=controlhub-xxxxx.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=controlhub-xxxxx
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=controlhub-xxxxx.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin (Server-side)
FIREBASE_PROJECT_ID=controlhub-xxxxx
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@controlhub-xxxxx.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# App API Tokens (for apps to call ControlHub API)
# Generate secure random tokens for each app
COINBOX_API_TOKEN=secure_random_token_for_coinbox
SPORTSHUB_API_TOKEN=secure_random_token_for_sportshub
DRIVEMASTER_API_TOKEN=secure_random_token_for_drivemaster
EDUTECH_API_TOKEN=secure_random_token_for_edutech
PORTAL_API_TOKEN=secure_random_token_for_portal
MYPROJECTS_API_TOKEN=secure_random_token_for_myprojects

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3010
NODE_ENV=development

# Data Retention (in days)
AUTH_EVENTS_RETENTION_DAYS=90
HEALTH_EVENTS_RETENTION_DAYS=30
ALERTS_RETENTION_DAYS=365
AUDIT_LOGS_RETENTION_DAYS=2555  # 7 years

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60

# Security
SESSION_SECRET=your_session_secret_here
MFA_REQUIRED=true

# IMPORTANT SECURITY NOTES:
# 1. NEVER commit .env or .env.local files
# 2. ControlHub has its OWN Firebase project (not shared with apps)
# 3. Each app needs a unique API token to call ControlHub
# 4. Rotate tokens regularly
# 5. Use different tokens for dev/staging/production
