# Firebase Client Configuration (Public - used in browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side - keep secret!)
# Get this from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project_id",...}

# App URLs
NEXT_PUBLIC_HOMEPAGE_URL=http://localhost:3000
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3001

# Product URLs (will be used when products are integrated)
NEXT_PUBLIC_COINBOX_URL=http://localhost:3002
NEXT_PUBLIC_DRIVE_MASTER_URL=http://localhost:3003
NEXT_PUBLIC_CODETECH_URL=http://localhost:3004
NEXT_PUBLIC_UMKHANYAKUDE_URL=http://localhost:3005

# Payment Provider Configuration
PAYFAST_MERCHANT_ID=your_merchant_id
PAYFAST_MERCHANT_KEY=your_merchant_key
PAYFAST_PASSPHRASE=your_passphrase
PAYFAST_MODE=sandbox # or 'production'

# Optional: Stripe (for international payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Upstash Redis (Rate Limiting)
UPSTASH_REDIS_REST_URL=https://your-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# Mixpanel (Analytics)
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_project_token
