# ==========================================
# PHASE 2: WALLET + ESCROW ENVIRONMENT VARIABLES
# ==========================================

# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret_here
PAYSTACK_CALLBACK_URL=https://yourdomain.com/wallet/deposit/callback

# Firebase Project Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false
PORT=9004

# Wallet Configuration (Optional - defaults in code)
MIN_DEPOSIT=100
MIN_WITHDRAWAL=500
MAX_WITHDRAWAL=1000000
TRANSACTION_FEE_PERCENT=0.5
WITHDRAWAL_FEE=50

# P2P Configuration (Optional - defaults in code)
MIN_TRADE_AMOUNT=1000
MAX_TRADE_AMOUNT=5000000
DEFAULT_PAYMENT_WINDOW=15
AUTO_CANCEL_BUFFER=5

# Security (Optional)
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
