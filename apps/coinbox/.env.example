# Paystack Configuration
# Get test keys from: https://dashboard.paystack.com/#/settings/developer
# IMPORTANT: Use pk_test_ for test mode, pk_live_ for production
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:9004
NEXT_PUBLIC_BASE_URL=http://localhost:9004
NEXT_PUBLIC_VERIFICATION_REDIRECT_URL=http://localhost:9004/auth/verify-email

# Firebase Configuration (Client-side)
# Get from: Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
NEXT_PUBLIC_FIREBASE_DYNAMIC_LINKS_DOMAIN=yourapp.page.link

# Firebase Admin Configuration
# Get from: Firebase Console > Project Settings > Service Accounts
# Download service account JSON and place in ./secrets/
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY_PATH=./secrets/firebase-admin.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Alternative: Set FIREBASE_PRIVATE_KEY directly (not recommended for git)
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Authentication Configuration
AUTH_SECRET_KEY=your-auth-secret-key
AUTH_SESSION_EXPIRES_IN=7d
NEXT_PUBLIC_AUTH_ERROR_PAGE=/auth/error
NEXT_PUBLIC_AUTH_SIGNIN_PAGE=/auth

# Email Service Configuration 
# (In development, uses Ethereal for testing, no need to fill these)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email-user
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@coinboxconnect.com
EMAIL_SECURE=false

# Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Additional Security Headers
NEXT_PUBLIC_CSP_HEADERS=true

# Cron Job Security (for automated loan reminders)
CRON_SECRET=your-secure-random-string-here

# Google AI Configuration (for P2P Crypto AI predictions)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Luno API Configuration (for crypto trading)
# Get from: https://www.luno.com/wallet/security/api_keys
LUNO_API_KEY_ID=your_luno_api_key_id_here
LUNO_API_KEY_SECRET=your_luno_api_secret_here

# IMPORTANT SECURITY NOTES:
# 1. NEVER commit .env or .env.local files to git
# 2. Add .env* to .gitignore (except .env.example)
# 3. Rotate API keys immediately if exposed
# 4. Use different keys for development and production
# 5. Store production keys in secure environment (Vercel, AWS Secrets Manager, etc.)
