# Firebase Configuration (Required)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=DriveMaster
NEXT_PUBLIC_PRODUCT_ID=drive-master

# SendGrid Email Service (Required for email notifications)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@drivemaster.co.za

# PayFast Payment Gateway (Required for subscriptions)
NEXT_PUBLIC_PAYFAST_MERCHANT_ID=your-merchant-id
NEXT_PUBLIC_PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-passphrase
NEXT_PUBLIC_PAYFAST_MODE=sandbox  # or 'live' for production

# Sentry Error Tracking (Optional but recommended)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_AUTH_TOKEN=your-auth-token

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true

# Environment
NODE_ENV=development  # or 'production'
