# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Get these from Firebase Console: https://console.firebase.google.com/

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

NEXT_PUBLIC_APP_URL=http://localhost:3008
NEXT_PUBLIC_APP_NAME=SportsHub

# ============================================================================
# PAYFAST PAYMENT GATEWAY (SOUTH AFRICA)
# ============================================================================
# Sandbox credentials (for testing - these are public test credentials)
# Get production credentials from: https://www.payfast.co.za

NEXT_PUBLIC_PAYFAST_MERCHANT_ID=10000100
NEXT_PUBLIC_PAYFAST_MERCHANT_KEY=46f0cd694581a
NEXT_PUBLIC_PAYFAST_PASSPHRASE=your_passphrase_here
NEXT_PUBLIC_PAYFAST_SANDBOX=true

# PayFast Webhook URL (Cloud Function - set after deploying functions)
PAYFAST_WEBHOOK_URL=https://your-region-your-project.cloudfunctions.net/handlePayFastWebhook

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================

# Sentry Error Tracking (Production recommended)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Google Analytics 4 (Production recommended)
NEXT_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# hCaptcha (Fraud prevention)
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key
