{
  "name": "@alliedimpact/security",
  "version": "1.0.0",
  "description": "Shared security utilities for Allied iMpact platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware.mjs",
      "require": "./dist/middleware.js",
      "types": "./dist/middleware.d.ts"
    },
    "./validation": {
      "import": "./dist/validation.mjs",
      "require": "./dist/validation.js",
      "types": "./dist/validation.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/middleware.ts src/validation.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/middleware.ts src/validation.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "next": "^14.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "next": "^14.0.0"
  }
}
